<%= simple_form_for(@deficiencia, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id, :as => :hidden %>
    <%= f.input :descripcio %>
    <%= f.input :observacions %>
    <%= f.input :sistema %>
    <%= f.input :qualificacio %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.guardar'), :class => 'button button-right' %>
  </div>
<% end %>
