<%= simple_form_for(@deficiencia) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :edifici_id %>
    <%= f.input :descripcio %>
    <%= f.input :observacions %>
    <%= f.input :sistema %>
    <%= f.input :qualificacio %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
