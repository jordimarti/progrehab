<div class="light-background-container">
  
  <div class="row">
    <div class="medium-12 columns">
      <div class="titol-seccio">
        <%= t('.titol_fases') %>
      </div>
    </div>
  </div>

  <div class="reveal" id="modal-fase" data-reveal>
    <h3 id="modalTitle"><%= t('.fase') %></h3>
    <div id="formulari-fase" class="formulari-fase">
    </div>
    <button class="close-button" data-close aria-label="Close modal" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="row">
    <div class="medium-12 columns">
      <div class="fases-container">
        <div id="fases">
          <% if @fases.exists? %>
            <%= render  :partial => '/fases/llistat_fases' %>
          <% else %>
            <p><%= t('.crear_fases') %></p>
          <% end %>
        </div>
        <div class="spacer"></div>
        <%= link_to (new_fase_path(edifici_id: params[:edifici_id])), remote: true do %>
          <span class="suma">+</span> <%= t('.afegir_fase') %>
        <% end %>
      </div>
    </div>
  </div>

</div>