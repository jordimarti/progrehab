    	<div class="heavy-container">
        <div class="heavy-title-container">
          <h2 class="heavy-title"><%= t('.tutorials') %></h2>
        </div>


				<div class="heavy-container-form">
					<% if params[:locale] == 'ca' %>
					<div class="dades-container">
