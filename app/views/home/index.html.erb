<div class="dark-background-container">
  
  <% flash.each do |key, value| %>
    <div class="row">
      <div class="medium-6 columns end">
        <div class="success callout" data-closable>
          <%= value %>
          <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="medium-8 columns">
    	<div class="home-hero-title">
	    	<h1><%= t('.titol_programa_rehabilitacio') %></h1>
	    	<h2><%= t('.subtitol_programa_rehabilitacio') %></h2>
	    </div>
    </div>
    <div class="medium-4 columns">
    	<%= image_tag('logo_programa_rehabilitacio.png', :alt => t('.logo_programa_rehabilitacio'), :class => 'logo-app') %>
    </div>
  </div>
</div>