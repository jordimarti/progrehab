<div class="dark-background-container">
  <div class="row">
    <div class="medium-12 columns">
      <div class="projectes-external-container">
        <div class="heavy-title-container">
          <h2 class="heavy-title"><%= t('.titol') %></h2>
        </div>
        <div class="projectes-form-container">
          
          <div class="row">
            <div class="medium-12 columns">
              <div class="medium-6 columns">
                <div class="info-factura-item">
                  <%= t('.nom') %>:<br/> 
                  <span class="ressaltat"><%= @empresa_factura.nom_juridic %></span>
                </div>
                <div class="info-factura-item">
                  <%= t('.adreca') %>:<br/>  
                  <span class="ressaltat"><%= @empresa_factura.adreca %></span>
                </div>
                <div class="info-factura-item">
                  <%= t('.provincia') %>:<br/>  
                  <span class="ressaltat"><%= @empresa_factura.provincia %></span>
                </div>
                <div class="info-factura-item">
                  <%= t('.email') %>:<br/>  
                  <span class="ressaltat"><%= @empresa_factura.email %></span>
                </div>
              </div>
              <div class="medium-6 columns">
                  
                <div class="info-factura-item">
                  <%= t('.nif') %>:<br/>  
                  <span class="ressaltat"><%= @empresa_factura.nif %></span>
                </div>
                <div class="info-factura-item">
                  <%= t('.poblacio') %>:<br/>  
                  <span class="ressaltat"><%= @empresa_factura.poblacio %></span>
                </div>
                <div class="info-factura-item">
                  <%= t('.codi_postal') %>:<br/>  
                  <span class="ressaltat"><%= @empresa_factura.codi_postal %></span>
                </div>
              </div>
            </div>
          </div> 

          <div class="row">
            <div class="medium-12 columns">
            <%= link_to t('.procedir_pagament'), crear_pagament_path(edifici_id: @empresa_factura.edifici_id), class: "button small radius right botodreta" %>
            </div>
          </div>

          <div class="row">
            <div class="medium-6 medium-offset-3 columns">
              <div class="dades-info">
                <%= t('.explicacio') %><a href="http://isis.apabcn.cat/iris/Login.aspx">Oficina Virtual CAATEEB</a>
              </div>
            </div>
          </div>
                    

        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="medium-12 columns">
      <br>
      <%= link_to t('.tornar_projectes'), edificis_path %>
    </div>
  </div>
</div>

