

<table>
  <thead>
    <tr>
      <th><%= t('.concepte') %></th>
      <th><%= t('.import') %></th>
      <th><%= t('.data') %></th>
      <th width="30"></th>
    </tr>
  </thead>
  <tbody>
    <% @despeses.where(fase_id: fase_id).each do |despesa| %>
    <tr>
      <td>
        <%= link_to edit_despesa_path(despesa, edifici_id: despesa.edifici_id, fase_id: despesa.fase_id), remote: true do %>
          <div class="despesa-editar">
            <%= despesa.concepte %>
          </div>
        <% end %>
      </td>
      <td><%= despesa.import %></td>
      <td><%= despesa.data_mes %>/<%= despesa.data_any %></td>
      <td>
      	<%= link_to despesa_path(despesa), remote: true, method: :delete,  data: { confirm: 'Segur que vols eliminar?' } do %>
				  <div class="deficiencia-eliminar button-right">
				  	<i class="fa fa-trash" aria-hidden="true"></i>
				  </div>
				<% end %>
			</td>
    </tr>
    <% end %>
  </tbody>
</table>
