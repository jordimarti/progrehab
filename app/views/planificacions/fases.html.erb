<div class="light-background-container">

  <%= render 'menu_planificacio' %>

  <div class="reveal" id="modal-fase" data-reveal>
    <h3 id="modalTitle"><%= t('.fase') %></h3>
    <div id="formulari-fase" class="formulari-fase">
    </div>
    <button class="close-button" data-close aria-label="Close modal" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="reveal" id="modal-despesa" data-reveal>
    <h3 id="modalTitle"><%= t('.despesa') %></h3>
    <div id="formulari-despesa" class="formulari-despesa">
    </div>
    <button class="close-button" data-close aria-label="Close modal" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="row">
    <div class="medium-12 columns">
      <div class="fases-container">
        <div id="fases">
          <%= render  :partial => '/planificacions/llistat_fases' %>
        </div>
      </div>
    </div>
  </div>

</div>