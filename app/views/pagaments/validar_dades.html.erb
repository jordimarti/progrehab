<div class="dark-background-container">
	<div class="row">
		<div class="medium-6 medium-offset-3 columns">

			<% flash.each do |key, value| %>
		    <div class="row">
		      <div class="medium-12 columns end">
		        <% if key == 'notice'
		            key = 'success'
		            end %>
		        <% value["nif"].each do |erro| %>
			        <div data-alert class="alert-box alert <%= key %> radius">
			          <%= erro %>
			          <a href="#" class="close">&times;</a>
		        	</div>
		       	<% end %>
		      </div>
		    </div>
		  <% end %>


	    
      <div class="heavy-title-container">
        <h2 class="heavy-title"><%= t('.titol') %></h2>
      </div>
      <div class="projectes-form-container">
      	<p><%= t('.explicacio') %></p>
      	<div class="preu-llibre">
      		<div class="row">
      			<div class="medium-6 columns">
      				<%= image_tag('document_programa.png', :alt => t('.imatge_llibre'), :class => 'imatge-document document-right') %>
      			</div>
      			<div class="medium-6 columns">
		      		<div class="requadre-preu">
		      			18,15 â‚¬
		      		</div>
		      	</div>
		      </div>
		      <div class="row">
		      	<div class="medium-12 columns">
		      		<br>
		      		<p><%= t('.preu_no_colegiats') %></p>
		      	</div>
		      </div>
      	</div>

      	<hr>

      	<p><%= t('.explicacio2') %></p>
      	<p><%= t('.explicacio3') %></p>
      	
      	<div class="row">
      		<div class="medium-6 columns">
		      	<div class="comprovacio-nif">
		      		<%= simple_form_for(@usuari_factura) do |f| %>
								<%= f.error_notification %>
								<div class="form-inputs">
				          <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
				          <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
				          <%= f.input :nif, :input_html => { :value => @nif_usuari } %>
			          </div>

      					<div class="form-actions">
		              <%= f.button :submit, t('.factura_personal'), :class => 'button small radius' %>
		            </div>
		          <% end %>
      			</div>
    			</div>

		      <div class="medium-6 columns">
		      	<div class="comprovacio-nif">
		      		<%= simple_form_for(@empresa_factura) do |f| %>
								<%= f.error_notification %>
								<div class="form-inputs">
				          <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
				          <%= f.input :edifici_id, :as => :hidden, :input_html => { :value => @edifici.id } %>
				          <%= f.input :nif %>
			          </div>

      					<div class="form-actions">
		              <%= f.button :submit, t('.factura_empresa'), :class => 'button small radius' %>
		            </div>
		          <% end %>
      			</div>
		      </div>
		    </div>
      	
      </div>
      <br>
			<%= link_to t('.tornar_projectes'), edificis_path %>
		</div>
	</div>
</div>