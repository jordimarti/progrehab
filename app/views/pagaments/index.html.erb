<p id="notice"><%= notice %></p>

<h1>Listing Pagaments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Edifici</th>
      <th>Numorder</th>
      <th>Import</th>
      <th>Pagat</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pagaments.each do |pagament| %>
      <tr>
        <td><%= pagament.user_id %></td>
        <td><%= pagament.edifici_id %></td>
        <td><%= pagament.numorder %></td>
        <td><%= pagament.import %></td>
        <td><%= pagament.pagat %></td>
        <td><%= pagament.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

